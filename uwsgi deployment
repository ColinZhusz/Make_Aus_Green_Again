sudo apt install python3-pip
sudo apt-get install python3-venv
python3 -m venv env
source env/bin/activate (go into virtual env)
pip install django
django-admin.py startproject mysite
cd mysite
pip install uwsgi
sudo touch test.py
sudo nano test.py (copy file from django tutorial)
uwsgi --http :8001 --wsgi-file test.py (for test)
uwsgi --chdir /home/ubuntu/Make_Aus_Green_Again --home /home/ubuntu/env --http :8001 --module=Make_AUS_Green_Again.wsgi:application
(replace ip in settings.py for public dns)
sudo apt-get install nginx
cd /etc/nginx/sites-enabled
sudo touch mysite.conf
sudo nano mysite.conf
(copy mysite.conf configuration file to that named mysite.conf)
cd
create a mysite_uwsgi directory
mkdir mysite_uwsgi
cd mysite_uwsgi
sudo nano mysite.ini
(copy mysite.ini configuration file to that named mysite.ini)
uwsgi --ini /home/ubuntu/mysite_uwsgi/mysite.ini (type this command under mysite_uwsgi directory)
ps -aux | grep uwsgi (if the result is for or 5, it is succesful)
sudo ln -s /etc/nginx/sites-available/mysite.conf /etc/nginx/sites-enabled/mysite.conf (create a softlink)
sudo service nginx restart
